<div class="container-fluid">
  <%= search_form_for @q, url: :deal_menu_items, class:"d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" do |form|%>
    <div class="input-group">
      <%=form.text_field :name_cont, class:"form-control bg-light border-0 small", placeholder:"Search for..." , arialabel:"Search", ariadescribedby:"basic-addon2"%>
      <div class="input-group-append">
        <%=form.submit class:"form-control btn btn-primary"%>
      </div>
    </div>
  <%end%>
</div>
<div class="container mr-5 mt-5">
  <% @deal_items.each do |r| %>
    <div class="col-xl-6 col-md-12 mb-4">
      <div class="card border-left-info shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                <%=r.name%>
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%=r.price%></div>
            </div>
            <div class="col-auto">
              <%= image_tag(r.deal_photo, style:"border-radius: 50%; height: 50px; width:50px;") if r.deal_photo.attached?%>
            </div>
          </div>
          <%if current_admin.manager_id.blank?%>
            <div class="row ml-1">
              <%=link_to "Edit", edit_deal_menu_item_path(r)%>
              <div class="col ml-2">
                <%=link_to "Delete", deal_menu_item_path(r), method: :delete%>
              </div>
            </div>
          <%end%>
        </div>
      </div>
    </div>
  <%end%>
</div>

<div class="container">
  <div class="row">
    <!-- Profile -->
    <!-- Information Details-->
    <div class="col-xl-12 col-lg-7">
      <div class="card shadow mb-4">
        <!-- Card Header -->
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
          <h6 class="m-0 font-weight-bold text-dark">Edit Deal Menu Item</h6>
        </div>
        <!-- Main Form Content -->
        <div class="card-body">
          <%= form_with model: @deal_item, url: deal_menu_item_url, method: :put, local: true do |f| %>
            <div class="form-group">
              <label>Name</label>
              <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"form-control",placeholder:"Name" %>
            </div>
            <div class="form-group">
              <label>Price</label>
              <%= f.number_field :price, autofocus: true, autocomplete: "price",class:"form-control",placeholder:"Price" %>
            </div>
            <div class="form-group">
              <label>Status</label>
              <%= f.text_field :status, autofocus: true, autocomplete: "status",class:"form-control",placeholder:"Status" %>
            </div>
            <div class="file-upload-wrapper">
              <%= f.file_field :deal_photo, autofocus: true,class:"file-upload", dataheight:"500" %>
            </div>
            <hr>
            <%= f.submit "Update Deal Menu Item" ,class:"btn btn-secondary btn-small"%>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>

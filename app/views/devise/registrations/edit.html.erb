<div class="container">
  <div class="row">
    <!-- Profile -->
    <!-- Information Details-->
    <div class="col-xl-12 col-lg-7">
      <div class="card shadow mb-4">
        <!-- Card Header -->
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
          <h6 class="m-0 font-weight-bold text-dark">Edit Information</h6>
        </div>
        <!-- Main Form Content -->
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group">
              <label>Email</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control",placeholder:"Email" %>
            </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
            <div class="form-group">
              <label>New Password <span class="text-primary">(Optional)</span>
                <span class="text-muted">
                  <% if @minimum_password_length %>
                    <br />
                    <em><%= @minimum_password_length %> characters minimum</em>
                  <% end %>
                </span>
                <%= f.password_field :password, autocomplete: false , class:"form-control", placeholder:"New Password",readonly:"readonly", onfocus:"javascript: this.removeAttribute('readonly')"%>
              </label>
            </div>
            <div class="form-group">
              <label>Confirm Password</label>
              <%= f.password_field :password_confirmation, autocomplete: false, class:"form-control", placeholder:"Confirm Password",readonly:"readonly", onfocus:"javascript: this.removeAttribute('readonly')"%>
            </div>
            <div class="form-group">
              <label>Current Password <span class="text-danger">*</span></label>
              <%= f.password_field :current_password, autocomplete: false, class:"form-control", placeholder:"Current Password",readonly:"readonly", onfocus:"javascript: this.removeAttribute('readonly')"%>
            </div>
            <%= f.submit "Update Profile" ,class:"btn btn-secondary btn-small"%>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>

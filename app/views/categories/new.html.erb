<div class="container mb-4 mt-5">
  <div class="row">
    <!-- Menu Item Details-->
    <div class="col-lg-6 col-lg-12 ">
      <div class="card shadow mb-4 ">
        <!-- Card Header -->
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between border-bottom-primary">
          <h6 class="m-0 font-weight-bold text-center text-dark justify-content-between ">Add Category</h6>
        </div>
        <!-- Main Item Add Content -->
        <div class="card-body">
          <%= form_with model: @cat_item, url: categories_path, method: :post, local: true do |f| %>
            <div class="form-group">
              <label>Category Name</label>
              <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"form-control",placeholder:"Name" %>
            </div>
            <%debugger%>
            <hr>
            <%= f.submit "Add Category", class:"btn btn-primary btn-user btn-block mb-sm-2 btn-sm"%>
          </div>
        </div>
        <!--ends here-->
      </div>
    <%end%>
  </div>
</div>
</div>

<div class="container">
  <div class="row">
    <!-- Profile -->
    <!-- Information Details-->
    <div class="col-xl-12 col-lg-7">
      <div class="card shadow mb-4">
        <!-- Card Header -->
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
          <h6 class="m-0 font-weight-bold text-dark">Edit Category</h6>
        </div>
        <!-- Main Form Content -->
        <div class="card-body">
          <%= form_with model: @cat_item, url: category_url, method: :put, local: true do |f| %>
            <div class="form-group">
              <label>Name</label>
              <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"form-control",placeholder:"Name" %>
            </div>
            <hr>
            <%= f.submit "Update Category" ,class:"btn btn-secondary btn-small"%>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
